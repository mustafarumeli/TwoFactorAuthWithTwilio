@model UserLoginWithTwiloo.Models.Verification

@{
    ViewData["Title"] = "Verify";
}

<h4>Enter Verification Code Sent To Your Phone Below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Verify">
            <div class="form-group">
                <input asp-for="Code" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
